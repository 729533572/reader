<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MFSRoundImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>

    <attr name="color_no_finger_inner_circle" format="color" />
    <attr name="color_no_finger_outer_circle" format="color" />
    <attr name="color_finger_on" format="color" />
    <attr name="color_finger_up" format="color" />
    <attr name="count" format="integer" />
    <attr name="tryTimes" format="integer" />

    <declare-styleable name="MFSGestureLockViewGroup">
        <attr name="color_no_finger_inner_circle" />
        <attr name="color_no_finger_outer_circle" />
        <attr name="color_finger_on" />
        <attr name="color_finger_up" />
        <attr name="count" />
        <attr name="tryTimes" />
    </declare-styleable>

    <declare-styleable name="MFSAutoScrollTextView">
        <attr name="switchDuaration" format="integer"/>
        <attr name="idleDuaration" format="integer"/>
        <attr name="switchOrientation">
            <enum name="up"  value="0"/>
            <enum name="down"  value="1"/>
        </attr>
    </declare-styleable>

    <!--自定义属性 -->
    <declare-styleable name="MFSClipViewLayout">
        <attr name="clipType" format="enum">
            <enum name="circle" value="1" />
            <enum name="rectangle" value="2" />
        </attr>
        <attr name="mHorizontalPadding" format="dimension" />
        <attr name="clipBorderWidth" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>

    <!--自定义MLImageView的属性 加上了自己的前缀，防止和其他自定义控件冲突-->
    <declare-styleable name="MFSRoundedRectangleImageView">
        <attr name="ml_border_color" format="color" />
        <attr name="ml_border_width" format="dimension" />
        <attr name="ml_press_alpha" format="integer" />
        <attr name="ml_press_color" format="color" />
        <attr name="ml_radius" format="dimension" />
        <attr name="ml_shape_type" format="enum">
            <enum name="none" value="0" />
            <enum name="round" value="1" />
            <enum name="rectangle" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="round_textview">
        <attr name="bgColor" format="integer"/>
        <attr name="bgCornerSize" format="integer"/>
    </declare-styleable>

    <declare-styleable name="PopupWindowListView">
        <attr name="maxHeight" format="dimension"/>
        <attr name="maxWidth" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="PopupWindowCardView">
        <attr name="maxHeightCus" format="dimension"/>
        <attr name="maxWidthCus" format="dimension"/>
    </declare-styleable>

    <!-- AndroidAgo -->
    <declare-styleable name="RelativeTimeTextView">
        <attr name="relativeTimePrefix" format="string" />
        <attr name="relativeTimeSuffix" format="string" />
        <attr name="referenceTime" format="string" />
    </declare-styleable>
    <declare-styleable name="ShrinkLinearLayout">
        <attr name="shrinkDuration" format="integer" />
        <attr name="expandDuration" format="integer" />
        <attr name="shrinkRate" format="float" />
    </declare-styleable>
</resources>
