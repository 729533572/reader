<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/bb_bottom_bar_top_shadow" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_bigger_bigger"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="价格:"
            android:textColor="@color/sub_common_black"
            android:textSize="@dimen/front_size_large" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red_common"
                android:textSize="@dimen/front_size_large" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="阅读点"
                android:textColor="@color/common_black"
                android:textSize="@dimen/front_size_large" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@color/divider_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_bigger_bigger"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="余额:"
            android:textColor="@color/sub_common_black"
            android:textSize="@dimen/front_size_large" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/front_size_large" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="阅读点"
                android:textColor="@color/common_black"
                android:textSize="@dimen/front_size_large" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@color/divider_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_bigger_bigger"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_icon_buy" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自动使用余额购买下一章并不再提示"
            android:textColor="#707070"
            android:textSize="12sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_recharge_buy"
        android:layout_width="240dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_login"
        android:gravity="center"
        android:text="充值并购买"
        android:textColor="@color/white"
        android:textSize="@dimen/front_size_large" />

    <FrameLayout
        android:layout_width="240dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_login">

        <Button
            android:id="@+id/btn_buy_batch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/clear"
            android:text="批量购买更优惠"
            android:textColor="@color/white"
            android:textSize="@dimen/front_size_large" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:paddingBottom="2dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_buy_discount" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="4dp"
                android:text="8折"
                android:textColor="@color/white"
                android:textSize="13sp" />
        </FrameLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/tv_open_monthly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:drawablePadding="8dp"
        android:drawableRight="@mipmap/ic_tag_double_arrow_right"
        android:text="开通包月会员免费读本书 "
        android:textColor="@color/colorAccent"
        android:textSize="13sp" />
</LinearLayout>
