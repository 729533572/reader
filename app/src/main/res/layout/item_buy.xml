<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/space_big"
        android:background="@drawable/bg_buy_item"
        android:duplicateParentState="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:duplicateParentState="true">
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/select_color_white_dark"
                android:textSize="23sp"
                android:text="0"
                android:gravity="center"
                android:duplicateParentState="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/select_color_white_dark"
                android:textSize="13sp"
                android:text="元"
                android:gravity="center"
                android:layout_marginLeft="6dp"
                android:duplicateParentState="true"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_time_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/select_color_white_accent"
            android:textSize="12sp"
            android:text="0天"
            android:layout_marginTop="4dp"
            android:duplicateParentState="true"
            />
    </LinearLayout>

</FrameLayout>